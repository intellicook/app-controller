{
  "openapi": "3.0.1",
  "info": {
    "title": "IntelliCook App Controller API",
    "description": "The controller service that connects backend components and the frontend.",
    "version": "v0.1"
  },
  "paths": {
    "/Health": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Checks the health of App Controller and its components.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HealthGetResponseModel"
                  }
                }
              }
            }
          },
          "503": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HealthGetResponseModel"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/Api/Temporary": {
      "get": {
        "tags": [
          "Temporary"
        ],
        "summary": "Get method for temporary testing purposes.",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthCheckModel": {
        "required": [
          "name",
          "status"
        ],
        "type": "object",
        "properties": {
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "status": {
            "$ref": "#/components/schemas/HealthStatusModel"
          }
        },
        "additionalProperties": false
      },
      "HealthGetResponseModel": {
        "required": [
          "checks",
          "service",
          "status"
        ],
        "type": "object",
        "properties": {
          "service": {
            "$ref": "#/components/schemas/HealthServiceModel"
          },
          "status": {
            "$ref": "#/components/schemas/HealthStatusModel"
          },
          "checks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HealthCheckModel"
            }
          }
        },
        "additionalProperties": false
      },
      "HealthServiceModel": {
        "enum": [
          "AppController",
          "Auth"
        ],
        "type": "string"
      },
      "HealthStatusModel": {
        "enum": [
          "Healthy",
          "Degraded",
          "Unhealthy"
        ],
        "type": "string"
      }
    }
  }
}